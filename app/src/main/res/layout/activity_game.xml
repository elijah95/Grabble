<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    tools:context="com.elijah.game.grabblegame.GameActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.elijah.game.grabblegame.GameActivity" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/score_view"
        android:text="@integer/score"
        android:textColor="@color/yellow"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/distance_view"
        android:text="@integer/distance"
        android:textColor="@color/yellow"
        android:textSize="35sp" />


    <ImageView
        android:id="@+id/score_view"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_above="@+id/distance_view"
        android:layout_alignStart="@+id/distance_view"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/distance_view"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="18dp"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/spell"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="18dp"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:scaleType="fitXY" />


</RelativeLayout>



