<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/store_fragment_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">


    <ImageView
        android:id="@+id/letter_view_store_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:maxHeight="49dp"
        android:maxWidth="49dp"
        android:src="@drawable/p" />

    <TextView
        android:id="@+id/cost_text_store_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/letter_view_store_fragment"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="No Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
